<div id="content">
    <div id="progress">
        <div id="progress-bar">1%</div>
    </div>
    <div id="button-container">
        <p id="text-home">All your passwords in one secure place</p>
        <button id="button-get-start" type="button" onclick="informConnected()">Get started</button>
    </div>
</div>
<script>
    let progress = 1;
    let index = 1;
    const couleurs = ["#4d62ea", "#ddd"];
    const progressBar = document.getElementById('progress-bar');
    const textHome = document.getElementById('text-home');

    function updateProgress() {
        if (progress <= 100) {
            progressBar.style.width = progress + '%';
            progressBar.textContent = progress + '%';
            progress++;
            setTimeout(updateProgress, 100);
        }
        else {
            informConnected();
        }
    }
    function updateTextHome() {
        textHome.style.color = couleurs[index];
        index = (index + 1) % couleurs.length;
        setTimeout(updateTextHome, 1500)
    }
    
    function informConnected() {
        window.location.href = 'home';
    }
    updateProgress();
    updateTextHome();

</script>