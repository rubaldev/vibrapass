<style>
    body {
        width: 100vw;
        height: 100vh;
    }

    .principale {
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        margin: 0px;
        background-color: rgb(6, 6, 6);
    }

    .containerleft {
        background-color: #4d62ea;
        width: 25%;
        height: 100%;
        margin-left: 0px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-top: 2px;
        gap: 30px;
    }

    .containerrigth {
        width: 75%;
        height: 100%;
        display: flex;
        flex-direction: column;
        background-color: transparent;
        margin-right: 0px;
        color: white;
        font-family: Arial, Helvetica, sans-serif;
    }

    .containerleftone {
        width: 89.5%;
        height: 60%;
        background-color: rgb(71, 69, 69);
        border-radius: 25px;
    }

    .containerlefttwo {
        border-radius: 25px;
        width: 89.5%;
        height: 30%;
        background-color: rgb(71, 69, 69);
    }

    ul {
        width: 100px;
        height: 100px;
        background-color: rgb(66, 108, 179);
        color: white;
        text-align: center;
        font-size: 1.5rem;
        font-family: Arial, Helvetica, sans-serif;
        margin: 12px;
        padding: 5px;
        list-style: none;
    }
</style>
<div class="principale">
    <div class="containerleft">
        <div class="containerleftone">

        </div>
        <div class="containerlefttwo">

        </div>
    </div>
    <div class="containerrigth">
        <ul id="items-list">
            {{#each items}}
            <li data-id="{{this.id}}">{{this.name}}</li>
            {{/each}}
        </ul>
    </div>
</div>

<script>
    window.onload = () => {
        // Récupérer la liste des éléments depuis le HTML
        const itemsList = document.querySelectorAll('#items-list li');
        if (itemsList.length === 0) {
            console.log("Aucun élément trouvé !");
        } else {
            console.log(`${itemsList.length} éléments trouvés`);
        }
        // Créer une nouvelle liste dynamique
        const dynamicList = document.createElement('ul');
        document.body.appendChild(dynamicList);  // Ajouter la nouvelle liste à la page

        // Parcourir les éléments récupérés pour les afficher dans la nouvelle liste
        itemsList.forEach(item => {
            const li = document.createElement('li');
            li.textContent = item.textContent;  // Récupérer le texte de chaque item
            dynamicList.appendChild(li);
        });
    };

</script>